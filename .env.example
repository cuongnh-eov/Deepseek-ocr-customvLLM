# ═══════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_db_name
DATABASE_URL=postgresql+psycopg2://user:password@ocr-postgres:5432/db_name

# ═══════════════════════════════════════════════════════════════════
# RABBITMQ CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
RABBIT_URL=amqp://guest:guest@ocr-rabbit:5672/

# ═══════════════════════════════════════════════════════════════════
# REDIS CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@ocr-redis:6379/0

# ═══════════════════════════════════════════════════════════════════
# MINIO CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
MINIO_ENDPOINT=http://ocr-minio:9000
MINIO_ROOT_USER=your_minio_user
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=ocr-results

# ═══════════════════════════════════════════════════════════════════
# MODEL CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
MODEL_PATH=/models/DeepSeek-OCRR
TRITON_PTXAS_PATH=/usr/local/cuda-11.8/bin/ptxas

# ═══════════════════════════════════════════════════════════════════
# INPUT/OUTPUT PATHS
# ═══════════════════════════════════════════════════════════════════
INPUT_PATH=/path/to/input/document.pdf
OUTPUT_PATH=./outputs
UPLOAD_PATH=./uploads

# ═══════════════════════════════════════════════════════════════════
# API SETTINGS
# ═══════════════════════════════════════════════════════════════════
API_PORT=8001
API_HOST=0.0.0.0

# ═══════════════════════════════════════════════════════════════════
# PYTORCH CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# ═══════════════════════════════════════════════════════════════════
# QUEUE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
QUEUE_NAME=ocr_jobs
MAX_UPLOAD_MB=200
